{
  "extends": "tslint:recommended",
  "rules": {
    "variable-name": {
      "options": [
        "ban-keywords",
        "check-format",
        "allow-pascal-case",
        "allow-leading-underscore"
      ]
    },
    "max-line-length": {
      "options": [120]
    },
    "object-literal-sort-keys": { "severity": "warning" },
    "no-arg": true,
    "no-consecutive-blank-lines": true,
    "adjacent-overload-signatures": true,
    "import-spacing": true,
    "indent": [true, "spaces", 2],
    "no-console": {
      "severity": "warning",
      "options": [
        "debug",
        "info",
        "log",
        "time",
        "timeEnd",
        "trace"
      ]
    }
  },
  "jsRules": {
    "max-line-length": {
      "options": [120]
    }
  }
}
